<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_elements"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gsu.electronicpostcard.AddElementsActivity">

    <TextView
        android:text="Add Text!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView5"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/hw"
        android:layout_toStartOf="@+id/gal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/clipart"
        android:layout_marginEnd="73dp"
        android:id="@+id/ca"
        android:layout_alignTop="@+id/hw"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gallery"
        android:id="@+id/gal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/handwritng"
        android:layout_marginTop="65dp"
        android:id="@+id/hw"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/gal" />

    <TextView
        android:text="Add Text!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView4"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/hw"
        android:layout_toStartOf="@+id/gal" />

    <TextView
        android:text="Clipart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/gal"
        android:id="@+id/textView6"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="Gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gal"
        android:layout_toStartOf="@+id/ca"
        android:layout_marginTop="32dp"
        android:id="@+id/textView7"
        android:textColor="@android:color/background_dark" />

</RelativeLayout>
